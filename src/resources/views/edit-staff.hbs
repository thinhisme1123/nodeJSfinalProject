<div class="body-container">
    <div class="grid-container">
        <div class="header-product">
            <div class="header-product-left">
                <h4>Edit Staff</h4>
                <p>Edit this Staff</p>
            </div>
        </div>
        <form action="/staff/edit/{{staff._id}}?_method=PUT" method="post" enctype="multipart/form-data">
        <div class="product-list-container">
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Product Name</h6>
                    <input type="text" name="username" value="{{staff.username}}">
                </div>
                <div class="col create-product-item">
                    <h6>Email</h6>
                    <input type="text" name="email" value="{{staff.email}}">
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Choose Image</h6>
                    <label for="file-input" class="file-label">
                        <i class="fas fa-cloud-upload-alt"></i>
                        Drag and drop a file to upload
                    </label>
                    <input type="file" class="custom-file-input" id="file-input" name="image">
                    <img src="{{staff.image}}" id="preview-image" style="max-width: 30%; max-height:100%; margin-top: 10px;">
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <button class="create-submit-btn" type="submit">Update</button>
                    <a class="create-cancel-btn" href="/staff">Cancel</a>
                </div>
            </div>
        </div>
        </form>
    </div>
    {{!-- Update modal --}}
   <div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content bg-dark text-white">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirm Update</h5>
                    <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to update product <strong id="productNameInModal">{{staff.username}}</strong>?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-primary" id="confirmDelete">Sure</button>
                </div>
            </div>
        </div>
    </div>
    
</div>
<script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>
<script>
  // Name of the file appears on select
    console.log($(".custom-file-input").length);
   $(".custom-file-input").on("change", function () {
    var fileName = $(this).val().split("\\").pop();
    console.log(fileName); // Corrected variable name
    $(this)
        .siblings(".file-label")
        .addClass("selected")
        .html(fileName);

    // Display the image preview
    const fileInput = this;
    const file = fileInput.files[0];

    if (file) {
        const reader = new FileReader();

        reader.onload = function (e) {
            const previewImage = $("#preview-image");
            previewImage.attr("src", e.target.result);
            previewImage.show();
        };

        reader.readAsDataURL(file);
    }
    });
    
</script>
