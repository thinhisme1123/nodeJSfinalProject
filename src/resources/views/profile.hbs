<div class="body-container">
    <div class="grid-container">
        <div class="header-product">
            <div class="header-product-left">
                <h4>Profile</h4>
                <p>User Profile</p>
            </div>
        </div>
        
        <form action="/create-product" method="post">
        <div class="product-list-container">
            <div class="profile-background">
                <div class="profile-img">
                    <img src="/img/logoHPT.jpg" alt="">
                </div>
                <div class="profile-info">
                    <h2>{{globalData.username}}</h2>
                    <h6>Updates Your Photo and Personal Details</h6>
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Name</h6>
                    <input value="{{globalData.username}}" type="text" name="username">
                </div>
                <div class="col create-product-item">
                    <h6>Email</h6>
                    <input value="{{globalData.email}}" type="text" name="email">
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Choose Image</h6>
                    <label for="file-input" class="file-label">
                        <i class="fas fa-cloud-upload-alt"></i>
                        Drag and drop a file to upload
                    </label>
                    <input type="file" id="file-input" >
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <button class="create-submit-btn" type="submit">Submit</button>
                    <a class="create-cancel-btn" href="/product">Cancel</a>
                </div>
            </div>
        </div>
        </form>
    </div>
    
</div>