<div class="body-container">
    <div class="grid-container">
        <div class="header-product">
            <div class="header-product-left">
                <h4>Staff Add</h4>
                <p>Create new Staff</p>
            </div>
        </div>
        <form action="/staff/create-staff" method="post">
        <div class="product-list-container">
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>First Name</h6>
                    <input type="text" name="firstName">
                </div>
                <div class="col create-product-item">
                    <h6>Last Name</h6>
                    <input type="text"name="lastName">
                </div>
                <div class="col create-product-item">
                    <h6>Email</h6>
                    <input type="text"name="email">
                </div>
                <div class="col create-product-item">
                    <h6>Create by</h6>
                    <select name="role" id="role">
                        <option value="">Choose People</option>
                        <option value="admin">Admin</option>
                        <option value="staff">Staff</option>
                    </select>
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Choose Image</h6>
                    <label for="file-input" class="file-label">
                        <i class="fas fa-cloud-upload-alt"></i>
                        Drag and drop a file to upload
                    </label>
                    <input type="file" id="file-input" >
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <button class="create-submit-btn" type="submit">Submit</button>
                    <a class="create-cancel-btn" href="/product">Cancel</a>
                </div>
            </div>
        </div>
        </form>
    </div>
    
</div>