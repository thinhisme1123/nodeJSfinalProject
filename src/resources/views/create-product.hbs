<div class="body-container">
    <div class="grid-container">
        <div class="header-product">
            <div class="header-product-left">
                <h4>Product Add</h4>
                <p>Create new product</p>
            </div>
        </div>
        <form action="/create-product" method="post">
        <div class="product-list-container">
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Product Name</h6>
                    <input type="text">
                </div>
                <div class="col create-product-item">
                    <h6>Category</h6>
                    <select name="category" id="create-category">
                        <option value="">Choose Category</option>
                        <option value="">Computer</option>
                        <option value="">Laptop</option>
                        <option value="">Phone</option>
                    </select>
                </div>
                <div class="col create-product-item">
                    <h6>Brand</h6>
                    <select name="brand" id="create-brand">
                        <option value="">Choose Brand</option>
                        <option value="">Computer</option>
                        <option value="">Laptop</option>
                        <option value="">Phone</option>
                    </select>
                </div>
                <div class="col create-product-item">
                    <h6>Price</h6>
                    <input type="text">
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Description</h6>
                    <textarea name="" id="" cols="30" rows="5"></textarea>
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Quantity</h6>
                    <input type="text">
                </div>
                <div class="col create-product-item">
                    <h6>Create by</h6>
                    <select name="create-by" id="create-by">
                        <option value="">Choose People</option>
                        <option value="">Admin</option>
                        <option value="">Staff</option>
                    </select>
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <h6>Choose Image</h6>
                    <label for="file-input" class="file-label">
                        <i class="fas fa-cloud-upload-alt"></i>
                        Drag and drop a file to upload
                    </label>
                    <input type="file" id="file-input" >
                </div>
            </div>
            <div style="margin-left: 50px;" class="create-product-row row">
                <div class="col create-product-item">
                    <button class="create-submit-btn" type="submit">Submit</button>
                    <a class="create-cancel-btn" href="/product">Cancel</a>
                </div>
            </div>
        </div>
        </form>
    </div>
    
</div>